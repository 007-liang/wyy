{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"], 
        },
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "src/**/*.ts", 
        "src/**/*.d.ts", 
        "src/**/*.tsx", 
        "src/**/*.vue"
, "index.d.ts"    ],
    "exclude": ["node_modules"]
}
